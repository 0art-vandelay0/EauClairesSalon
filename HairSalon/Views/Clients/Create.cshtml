@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Add a new Client</h1>

<p><strong>NOTE:</strong> You need to have at least one Stylist in order to add a Client.</p>
<p>Click <span id="inner-nav-link">@Html.ActionLink("HERE", "Create", "Stylists")</span> to add a Stylist.</p>

<div id="form">
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        <br>
        @Html.TextBoxFor(model => model.Name)
        <br>

        @Html.LabelFor(model => model.PhoneNumber)
        <br>
        @Html.TextBoxFor(model => model.PhoneNumber)
        <br>

        @Html.LabelFor(model => model.Stylist)
        <br>
        @Html.DropDownList("StylistId")
        <br>

        <input id="form-button" type="submit" value="Add new Client" />
    }
</div>

<div id="links">
    <p>@Html.ActionLink("Show all Clients", "Index")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>