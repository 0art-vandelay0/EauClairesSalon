@{
    Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
    <div id="empty-value-div">
        <h3>No Clients have been added yet!</h3>
        <p>Add a Stylist <span id="inner-nav-link">@Html.ActionLink("HERE", "Create", "Stylists")</span> in order to Add Clients.</p>
    </div>
} 
else
{
    <ul class="client-stylist-link">
        @foreach (Client client in Model)
        {
        <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
        }
    </ul>
}

<div id="links">
    <p>@Html.ActionLink("Add new client", "Create")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>