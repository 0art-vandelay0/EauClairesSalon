@{
    Layout = "_Layout";
} @using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
    <div id="empty-value-div">
    <h3>No Clients have been added yet!</h3>
        <p>
            Add a Stylist
            <span id="inner-nav-link"
                >@Html.ActionLink("HERE", "Create", "Stylists")</span
       >
        in order to Add Clients.
    </p>
</di    v>
}
else
    {    
    <ul class="client-stylist-link">
        @foreach (Client client in Model)
        {
            <li class="list-margins">
                @Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId
        }) | <span id="stylist-marker">@client.Stylist.Name</span>
            </li>
        }
    </ul>
}

