@{
    Layout = "_Layout";
} @using HairSalon.Models;

<h1>Stylists</h1>

@if (Model.Count == 0)
{
    <h3>No Stylists have been added yet!</h3>
    <p>Add a Stylist @Html.ActionLink("HERE", "Create") in order to Add Clients.</p>
}
else
{
    <div id="links">
    <p>@Html.ActionLink("Add new Client", "Create", "Clients")</p>
    <p>@Html.ActionLink("Add new Stylist", "Create")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
}

<ul class="client-stylist-link">
    @foreach (Stylist stylist in Model)
    {
        <li>
            @Html.ActionLink($"{stylist.Name}", "Details", new { id =
        stylist.StylistId })
        </li>
    }
</ul>

