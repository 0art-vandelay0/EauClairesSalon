@{
    Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Add a new Stylist</h1>

<div id="form">
    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name)
        <br>
        @Html.TextBoxFor(model => model.Name)
        <br>

        @Html.LabelFor(model => model.Specialty)
        <br>
        @Html.TextBoxFor(model => model.Specialty)
        <br>

        <input id="form-button" type="submit" value="Add new Stylist" />
    }
</div>

<div id="links">
    <p>@Html.ActionLink("Show all Stylists", "Index")</p>
    <p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
</div>